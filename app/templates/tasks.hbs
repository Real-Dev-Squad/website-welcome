{{page-title "My Tasks"}}

<div class="tasks-page">
  <SideBar
    @taskStatusList={{this.taskStatusList}}
    @showDropDown={{this.showDropDown}}
    @toggleDropDown={{this.toggleDropDown}}
    @changeUserSelectedTask={{this.changeUserSelectedTask}}
  />
  <Tasks
    @userSelectedTask={{this.userSelectedTask}}
    @tasksToShow={{this.tasksToShow}}
    @onTaskChange={{this.onTaskChange}}
    @onTaskUpdate={{this.handleUpdateTask}}
    @isLoading={{this.isLoading}}
    @disabled={{this.disabled}}
  />
  {{#if this.showModal}}
    <Task::Modal 
      @goBack={{this.goBack}}
      @markComplete={{this.markComplete}}
      @buttonRequired={{this.buttonRequired}}
      @message={{this.message}}
    />
  {{/if}}
</div>